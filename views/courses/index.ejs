<h2 class="center">Courses Table</h2>
<div class="center">
  <a class="button" href="/courses/new">Create New Course</a>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>
        <% if (loggedIn) { %>
          Edit
          <% } %>
      </th>
      <th>
        <% if (loggedIn) { %>
          Delete
          <% } %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% courses.forEach(course => { %>
    <tr>
      <td>
        <a href="<%= `/courses/${course._id}` %>">
          <%= course.title %>
        </a>
      </td>
      <td>
        <%= course.description %>
      </td>
      <td>

        <% if (loggedIn) { %>
          <a href="<%=`courses/${course._id}/edit`%>">Edit</a>
          <% } %>
      </a>
    </td>
   
      <td>
        <% if (loggedIn) { %>
        <a href="<%= `courses/${course._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
        <% } %>
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
